<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".SoundMeter.SoundMeter">


    <ImageView
        android:id="@+id/my_img"
        android:layout_width="680dp"
        android:layout_height="680dp"
        android:background="#fff"
        android:scaleType="fitXY"
        android:src="@drawable/green_back"></ImageView>

    <com.bjutsoft.studywithme.SoundMeter.SoundDiskView
        android:id="@+id/soundDiscView"
        android:layout_width="344dp"
        android:layout_height="368dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/noise_disc" />

    <ImageView
        android:id="@+id/noise_info"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_below="@+id/soundDiscView"
        android:scaleType="fitCenter"
        android:src="@drawable/learning"></ImageView>
</RelativeLayout>
